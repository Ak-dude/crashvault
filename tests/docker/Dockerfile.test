# Test Dockerfile for crashvault environment testing
# Supports multiple Python versions via build arg

ARG PYTHON_VERSION=3.11
FROM python:${PYTHON_VERSION}-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the project
COPY . /app/

# Install crashvault and test dependencies
RUN pip install --no-cache-dir -e . pytest click rich

# Set environment variable for test isolation
ENV CRASHVAULT_HOME=/tmp/crashvault-test

# Default command runs tests
CMD ["pytest", "tests/", "-v", "--tb=short"]